<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kill Swing Maniacs</title>
    <style>
        body {
            background-color: #001f3f;
            color: white;
            text-align: center;
            font-family: Arial, sans-serif;
            overflow: hidden;
        }
        .logo-container {
            position: relative;
            display: inline-block;
            margin-top: 50px;
            animation: fadeIn 2s ease-in-out;
        }
        .logo {
            width: 400px;
            animation: glow 2s infinite alternate, bounce 3s infinite;
        }
        @keyframes glow {
            0% {
                filter: drop-shadow(0 0 10px #00c8ff);
            }
            100% {
                filter: drop-shadow(0 0 20px #00c8ff);
            }
        }
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        @keyframes bounce {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-10px);
            }
        }
        .title {
            font-size: 36px;
            margin-top: 20px;
            text-shadow: 0 0 10px #00c8ff;
            animation: fadeIn 2s ease-in-out;
        }
        .lights {
            position: absolute;
            width: 50px;
            height: 50px;
            background-color: #00c8ff;
            border-radius: 50%;
            opacity: 0.5;
            animation: flicker 1.5s infinite alternate;
        }
        @keyframes flicker {
            0% { opacity: 0.3; transform: scale(1); }
            100% { opacity: 0.7; transform: scale(1.2); }
        }
    </style>
</head>
<body>
    <h1 class="title">Welcome to Kill Swing Maniacs</h1>
    <div class="logo-container">
        <img src="pixelcut-export.jpg" alt="Kill Swing Maniacs Logo" class="logo">
    </div>
    <script>
        function createLights() {
            for (let i = 0; i < 10; i++) {
                let light = document.createElement("div");
                light.className = "lights";
                document.body.appendChild(light);
                light.style.left = Math.random() * window.innerWidth + "px";
                light.style.top = Math.random() * window.innerHeight + "px";
            }
        }
        
        function animateLights() {
            const lights = document.querySelectorAll(".lights");
            lights.forEach(light => {
                light.style.transition = "all 2s ease-in-out";
                light.style.left = Math.random() * window.innerWidth + "px";
                light.style.top = Math.random() * window.innerHeight + "px";
            });
        }
        
        createLights();
        setInterval(animateLights, 3000);
    </script>
</body>
</html>
